<%- include('partials/head') %>
<body class="show-body">
    <section class="show">
        <h1><%=blog.title %> </h1>
        <p><%= blog.description %> </p>
        <p>- <%= blog.author %> </p>
        <div class="buttons">
            <form action="/blogs/<%=blog._id%>/edit ">
                <button>Edit</button>
            </form>
            <form action="/blogs/<%=blog._id%>?_method=DELETE" method="post">
                <button>Delete</button>
            </form>
        </div>

    </section>
    <a class="back" href="/blogs">Back</a>
    
</body>
</html>