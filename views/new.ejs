<%- include('partials/head') %> 
<body>
    <div class="new-blog">
        <h1>Create New Blog</h1>
        <form action="/blogs" method="post">
            <div class="space-div">
                <label for="title">Title:</label>
                <input type="text" name="title", placeholder="title" id="title" required>
            </div>
            <div class="space-div">
                <label for="description" style="display: block;">Blog:</label>
                <textarea name="description" id="description" cols="40" required rows="10"></textarea>
            </div>
            <div class="space-div">
                <label for="author">Author:</label>
                <input type="text" name="author" placeholder="Name" id="author">
            </div>
            <button>Submit</button>
        </form>
        <a class="back" href="/blogs">Back</a>
    </div>

</body>
</html>